{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@Components/*": ["Components/*"],
      "@Styles/*": ["Styles/*"],
      "@Images/*": ["Assets/Images/*"],
      "@Utils/*": ["Utils/*"]
    },
    "allowJs": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
